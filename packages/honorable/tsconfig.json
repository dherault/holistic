{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "honorable": ["node_modules/honorable"],
      "*": ["node_modules/*"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "preserveSymlinks": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/docs.ts"],
}
